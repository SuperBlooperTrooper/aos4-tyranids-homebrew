  <sharedRules>
    <rule id="r-synaptic-imperatives" name="Synaptic Imperatives (Command)">
      <description>Once per phase: pick 1 friendly TYRANIDS unit wholly within 9" of a friendly SYNAPSE unit; that unit gets +1 to hit until end of phase.</description>
    </rule>
    <rule id="r-endless-swarm" name="Endless Swarm">
      <description>End of your turn: if wholly within 9" of a SYNAPSE unit, return D3 slain models to this unit.</description>
    </rule>
  </sharedRules>

